// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Order {
  id           String      @id @default(cuid())
  customerName String
  status       String      @default("pending") // pending | preparing | done | cancelled
  total        Float
  customer     String  
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  tableNumber  Int?
  orderType    String      @default("dine-in") // dine-in | takeout | delivery
  orderCode    String?     @unique
  items        OrderItem[] // relation
}

model OrderItem {
  id        String  @id @default(cuid())
  name      String
  price     Float
  quantity  Int
  notes     String?
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model KitchenQueue {
  id        String   @id @default(cuid())
  name      String
  price     Float
  quantity  Int
  status    String   @default("pending")
  createdAt DateTime @default(now())
}

